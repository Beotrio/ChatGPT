
<div class="logo-container">
    <a href="{{ routes.root_url }}" class="logo-link w-inline-block">
        {% if settings.shop_screen_logo %}
            <img
                    src="{{ settings.shop_screen_logo | image_url }}"
                    style="width: {{ settings.shop_screen_logo_size }}px"
                    loading="lazy"
                    alt=""
                    class="logo"
            >
        {% else %}
            <img src="{{ 'Supreme-dummy.png' | asset_url }}" loading="lazy" alt="" class="logo">
        {% endif %}
    </a>
    {% if section.settings.show_date_time %}
        <div class="date-time-container">
            <div class="date" style="color: {{ section.settings.index_date_color }}">{{ 'tn7d8e379f' | t }}</div>
            <div class="time" style="color: {{ section.settings.index_time_color }}">{{ 't589b2285' | t }}</div>
        </div>
    {% endif %}
</div>



        
{% schema %}
{
  "name": "Clock",
  "tag": "div",
  "settings": [
         {
    "type": "checkbox",
    "id": "show_date_time",
    "label": "Show Date/Time",
    "default": true
    },
   {
      "type": "color",
      "id": "index_date_color",
      "label": "Date Color",
      "default": "#000000"
    },
     {
      "type": "color",
      "id": "index_time_color",
      "label": "Time Color",
      "default": "#000000"
    }
  ]
}
{% endschema %}
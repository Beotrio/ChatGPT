      {
        "type": "header",
        "content": "Page Transitions"
      },
      {
        "type": "select",
        "id": "page_transition_type",
        "label": "Page Transition Animation",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "fade_in",
